# ============================================================
# Zoho Feedback Analyzer API - Environment Configuration
# ============================================================
# Copy this file to .env and update with your values
# Never commit .env to version control!

# ============================================================
# Application Settings
# ============================================================
ENVIRONMENT=development
DEBUG=true
# APP_NAME=Zoho Feedback Analyzer API  # Optional, has default
# APP_VERSION=1.0.0  # Optional, has default

# ============================================================
# Google Gemini API Configuration
# ============================================================
# Required: Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyA1u2Gvq4nKSQnpF3ZNq_nVygrmpIVnBl0

# Optional: Model configuration
# GEMINI_MODEL=gemini-2.0-flash-exp
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=2048
# LLM_TIMEOUT=30

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# IMPORTANT: For production with multiple workers, use Redis!
# Development (single worker): memory://
# Production (multi-worker): redis://localhost:6379/0
RATE_LIMIT_STORAGE=memory://

# ============================================================
# CORS Configuration
# ============================================================
CORS_ENABLED=true

# WARNING: "*" allows all origins - only for development!
# Production: Set to your frontend URL(s), comma-separated
# Example: https://app.example.com,https://admin.example.com
CORS_ORIGINS=*

# CORS_ALLOW_CREDENTIALS=true
# CORS_ALLOW_METHODS=*
# CORS_ALLOW_HEADERS=*

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=INFO
# LOG_FORMAT=json
# LOG_FILE=  # Optional: Path to log file

# ============================================================
# Request/Response Configuration
# ============================================================
# MAX_REQUEST_SIZE=1048576  # 1MB in bytes
# RESPONSE_TIMEOUT=60  # seconds

# ============================================================
# Health Checks
# ============================================================
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_TIMEOUT=5

# ============================================================
# Feature Flags (Future)
# ============================================================
# BATCH_ANALYSIS_ENABLED=false
# ASYNC_PROCESSING_ENABLED=false

# ============================================================
# Production Checklist
# ============================================================
# Before deploying to production:
# ✓ Set ENVIRONMENT=production
# ✓ Set DEBUG=false
# ✓ Set GEMINI_API_KEY to valid key
# ✓ Set RATE_LIMIT_STORAGE to Redis URL
# ✓ Set CORS_ORIGINS to specific domains (not "*")
# ✓ Set LOG_LEVEL=WARNING or ERROR
# ✓ Review all security settings
